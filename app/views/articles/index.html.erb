<div class='articles-index'>
  <%= link_to 'Create New Article', new_article_path, class: 'new-article-link'  if user_signed_in? && current_user.editor?%>


  <% @articles_grouped_by_category.each do |category, articles| %>
    <div class='category'>
    <h2><%= category %></h2>
    <% articles.first(3).each do |article| %>
      <div class='article'>
        <%= link_to article_path(article), class: 'article-link' do %>
          <span class='article-title'> <%= article.title %> </span><span class='by-line'>by: <%= article.user.email %> </span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>